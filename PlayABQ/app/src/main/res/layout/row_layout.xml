<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:gravity="center_vertical|center_horizontal"
    android:padding="@dimen/design_navigation_separator_vertical_padding"
    android:orientation="horizontal"
    android:weightSum="1"
    android:divider="@color/colorPrimaryDark"
    android:baselineAligned="true"
    >

    <ImageView
        android:layout_width="29dp"
        android:layout_height="32dp"
        android:id="@+id/list_icon"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/list_name_text"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_toRightOf="@+id/list_icon"
        android:layout_toEndOf="@+id/list_icon"
        android:layout_toLeftOf="@+id/list_distance_text"
        android:layout_toStartOf="@+id/list_distance_text"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/list_distance_text"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />
</RelativeLayout>